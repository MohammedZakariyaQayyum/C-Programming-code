using System;

namespace MyApplication
{
  class Program
  {
    static void Main(string[] args)
    {
      Console.WriteLine("Hello World!"); //This outputs a string
      Console.WriteLine(3+2);
      Console.WriteLine("Im learning C#");
      Console.Write("I will print on the same line."); //This will make it so that the following output will be on the same line
      Console.WriteLine("I will print on the same line.");
      int myNum = 27; //This is an integer variable
      Console.WriteLine(myNum); // This displays the variable
      string myWord = "Word"; //This is a string variable
      Console.WriteLine("This is my " + myWord); //This displays teh variable after some text
      const double Pi = 3.14159; //This is a variable that cannot be changed
      Console.WriteLine(Pi);
      int x = 5, y = 6, z = 50; //This is multiple int variables on a single line
      Console.WriteLine(x + y + z);
    }
  }
}
